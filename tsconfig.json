{
    "compilerOptions": {
      "allowJs": false,
      "lib": ["es2015", "es2017"],
      "module": "commonjs",
      "moduleResolution": "nodenext",
      "target": "es6",
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "pretty": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "declaration": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
    ],
    "compileOnSave": true
  }